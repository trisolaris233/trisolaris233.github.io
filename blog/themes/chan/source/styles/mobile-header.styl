.mobile-header {
  display: none;
}

@media mq-mobile {
  .mobile-header {
    display: block;
    height: 60px;
    color: white;
    text-align: center;
    background-color: rgb(56,154,86);
    padding: 5px 10px;
    .title {
      font-size: 32px;
      line-height: 32px;
      color: white;
      font-weight: bold;
      color:white;
      position: relative;
      left: 40px;
      top: 7px;
    }

    .sidebar-toggle {
    	position: absolute;
      top: 15px;
      left: 10px;
    	background-color: transparent;
    	background-image: none;
    	border: 1px solid transparent;
    	border-radius: 4px;
      vertical-align: middle;
      float: left;
    }
    .sidebar-toggle:focus {
    	outline:0;
    }
    .sidebar-toggle .icon-bar {
    	display: block;
    	width: 30px;
    	height: 5px;
    	border-radius: 1px;
      background-color: white;
    }
    .sidebar-toggle .icon-bar+.icon-bar {
    	margin-top:4px;
    }
  }
}
